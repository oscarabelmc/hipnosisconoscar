---
import Layout from '../layouts/Layout.astro';
import MainBanner from '../components/MainBanner.astro';
import Intro from '../components/Intro.astro';
import WorkWithMe from '../components/WorkWithMe.astro';
import ParalaxQuote from '../components/ParalaxQuote.astro';
import SmallAboutMe from '../components/SmallAboutMe.astro';
---

<Layout>
    <div>
        <MainBanner />
        <Intro />
        <WorkWithMe />
        <ParalaxQuote />
        <SmallAboutMe />
        <section class="relative mt-30 px-4 py-40 overflow-hidden">
            <video class="absolute inset-0 w-full h-full object-cover z-0" autoplay loop muted>
                <source src="/video/bg-video.mp4" type="video/mp4" />
            </video>
            <h1 class="relative z-20 max-w-6xl leading-15 mx-auto text-center text-white text-4xl md:text-6xl font-arvo ">
                La verdad es que eres más fuerte de lo que crees. La verdad es que eres más fuerte de lo que piensas.
            </h1>
        </section>
        <div class="h-screen">

        </div>
</Layout>
